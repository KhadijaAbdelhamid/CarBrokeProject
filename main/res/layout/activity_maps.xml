<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MapsActivity">

    <Button
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_gravity="bottom"
        android:background="@drawable/battery"
        android:layout_marginBottom="20dp"
        android:id="@+id/buttonBattery"
        />
    <Button
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_gravity="bottom"
        android:background="@drawable/otherservices"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="105dp"
        android:id="@+id/buttonOtherServices"

        />
    <Button
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_gravity="bottom"
        android:background="@drawable/wheel"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="210dp"
        android:id="@+id/buttonPuller"
        />
    <Button
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_gravity="bottom"
        android:background="@drawable/puller"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="315dp"
        android:id="@+id/buttonWheel"
        />


    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


</FrameLayout>
